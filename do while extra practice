#include <iostream>
using namespace std;
int main()
{
    int a;
    int b;
    int c;
    
    do{
    cout<<"Enter a value for a: ";
    cin>>a;    
    }while(a<=0);
    do{
    cout<<"Enter a value for b: ";
    cin>>b;    
    }while(b<=0);
    do{
    cout<<"Enter a value for c: ";
    cin>>c;    
    }while(c<=0);
    
    cout<<"A is "<<a<<endl;
    cout<<"B is "<<b<<endl;
    cout<<"C is "<<c<<endl;
    return 0;
}